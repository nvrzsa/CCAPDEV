{{!-- Use the layout template we defined earlier --}}
{{#> mainLayout title="Lab Availability"}}

<main>
    <section id="check-available-section">
        <h2>Check Available Slots</h2>
        <input id="lab-date-select" type="date" min="2024-08-04" max="2024-08-10">
        <select id="lab-timeslot-select"></select>
        <button id="check-available-slots-btn">Check Slots</button>
        <div id="lab-availability-dv1"></div>
        <div id="lab-availability-dv2"></div>
        <div id="lab-availability-dv3"></div>
    </section>
    <section>
        <h2>Select a Lab</h2>
        <select id="lab-select">
            <!-- Options will be populated by JavaScript -->
        </select>
        <div id="availability"></div>
    </section>
</main>

{{/mainLayout}}
